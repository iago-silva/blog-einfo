<%= content_for(:page_title, 'Cadastre-se') %>

<div class="section">
  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <%= f.input :email,
                    label: 'E-mail',
                    input_html: { class: 'input' }, 
                    wrapper: false, 
                    label_html: { class: 'label' } %>
      </div>
      <div class="field">
        <%= f.input :password, 
                    label: 'Senha',
                    input_html: { class: 'input' }, 
                    wrapper: false, 
                    label_html: { class: 'label' } %>
      </div>
      <div class="field">
        <%= f.input :password_cofirmation, 
                    label: 'Senha',
                    input_html: { class: 'input' }, 
                    wrapper: false, 
                    label_html: { class: 'label' } %>
      </div>

      <div class="level">
          <%= f.submit 'Cadastrar', class: 'button is-primary' %>
          <%= link_to 'Entrar', new_user_session_path %>
      </div>
    <% end %>
  </div>
</div>