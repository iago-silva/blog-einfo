<% @post.comments.each do |comment| %>
	<div class="box">
		<div class="media">
			<div class="media-content">
				<p>
					<strong><%= comment.user.email %>:</strong>
					<%= comment.comment %>
				</p>
			</div>

			<% if comment.user == current_user %>
				<%= link_to 'Deletar', post_comment_path(@post, comment), class: 'button is-danger', method: :delete, data: { confirm: 'Tem certeza?' } %>
			<% end %>
		</div>
	</div>
<% end %>