<% content_for(:page_title, @post.title) %>

<div class="section">
	<div class="container">
		<div class="level">
			<div class="level-left">
				<p class="level-item"><strong>Ações</strong></p>
			</div>
			<div class="level-right">
				<div class="level-item">
					<%= link_to 'Editar', edit_post_path(@post), class: 'button is-primary' %>
				</div>
				<div class="level-item">
					<%= link_to 'Deletar', 
						post_path(@post), 
						class: 'button is-danger', 
						method: :delete,
						data: { confirm: 'Você tem certeza?' } %>
				</div>
			</div>
		</div>
		<div class="content">
			<%= @post.content %>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<h5 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comentário(s)</h2>

		<%= render 'comments' %>

		<hr />

		<h3 class="subtitle is-3">Deixe um comentário!</h3>

		<%= render 'comment_form' %>
	</div>
</div>